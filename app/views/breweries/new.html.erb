<%= simple_form_for @brewery, :url => {:controller => 'breweries', :action => 'create'} do |f|%>
<div class="row">
  <div class="span4">
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :email %>
  </div>
  <div class="span4">
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
  </div>
  <div class="span4">
    <%= f.input :postal_code %>
    <%= f.input :province %>
    <%= f.input :country %>
  </div>
</div>

<div class="row">
  <%= f.submit 'Submit', :class => 'btn btn-success' %>
</div>
<% end %>
